<h1>Login</h1>

<%= form_tag '/login' do %>

  <div class="form-group">
    <%= label :email, 'Email' %>
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label :password, 'Password' %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <%= submit_tag "Submit" %>

<% end %>